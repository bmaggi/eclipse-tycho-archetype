<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            id="${rootArtifactId}.commands.category"
            name="Sample Category">
      </category>
      <command
            categoryId="${rootArtifactId}.commands.category"
            name="Sample Command"
            id="${rootArtifactId}.commands.sampleCommand">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="${package}.handlers.SampleHandler"
            commandId="${rootArtifactId}.commands.sampleCommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="${rootArtifactId}.commands.sampleCommand"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+6">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="${rootArtifactId}.menus.sampleMenu"
               label="Sample Menu"
               mnemonic="M">
            <command
                  commandId="${rootArtifactId}.commands.sampleCommand"
                  id="${rootArtifactId}.menus.sampleCommand"
                  mnemonic="S">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="${rootArtifactId}.toolbars.sampleToolbar">
            <command
                  id="${rootArtifactId}.toolbars.sampleCommand"
                  commandId="${rootArtifactId}.commands.sampleCommand"
                  icon="icons/sample.png"
                  tooltip="Say hello world">
            </command>
         </toolbar>
      </menuContribution>
   </extension>

</plugin>
