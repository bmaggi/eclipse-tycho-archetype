<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0 http://maven.apache.org/xsd/archetype-descriptor-1.0.0.xsd" name="eclipse-tycho-archetype-descriptor" xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0"
                      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    
	 <!-- dot character makes is unusable in Velocity template -->
	<requiredProperties>
        <requiredProperty key="version">
            <defaultValue>1.0.0-SNAPSHOT</defaultValue>
            <validationRegex><![CDATA[^[0-9]+\.[0-9]+\.[0-9]+-SNAPSHOT]]></validationRegex>
        </requiredProperty>
        <requiredProperty key="tychoVersion">
            <defaultValue>1.2.0</defaultValue>
        </requiredProperty>
        <requiredProperty key="javaVersion">
            <defaultValue>1.8</defaultValue>
        </requiredProperty>
        <requiredProperty key="eclipsePlatform">
            <defaultValue>oxygen</defaultValue>
        </requiredProperty>
        <!--TODO provide a default for package -->
    </requiredProperties>
    <modules>
        <module id="${rootArtifactId}" dir="__artifactId__.plugin" name="${rootArtifactId}">
            <fileSets>
               <fileSet filtered="true" packaged="true" encoding="UTF-8">
                    <directory>src/</directory>
                    <includes>
                        <include>**/*.java</include>
                    </includes>
                </fileSet>
                <fileSet filtered="true" encoding="UTF-8">
                    <directory>META-INF</directory>
                    <includes>
                        <include>**/*.MF</include>
                    </includes>
                </fileSet>
                <fileSet filtered="true" encoding="UTF-8">
                    <directory></directory>
                    <includes>
                        <include>build.properties</include>
                        <include>.classpath</include>
                        <include>.project</include>
                    </includes>
                </fileSet>
            </fileSets>
        </module>
        <module id="${rootArtifactId}" dir="__artifactId__.test" name="${rootArtifactId}">
            <fileSets>
               <fileSet filtered="true" packaged="true" encoding="UTF-8">
                    <directory>src/</directory>
                    <includes>
                        <include>**/*.java</include>
                    </includes>
                </fileSet>
                <fileSet filtered="true" encoding="UTF-8">
                    <directory>META-INF</directory>
                    <includes>
                        <include>**/*.MF</include>
                    </includes>
                </fileSet>
                <fileSet filtered="true" encoding="UTF-8">
                    <directory></directory>
                    <includes>
                        <include>build.properties</include>
                        <include>.classpath</include>
                        <include>.project</include>
                    </includes>
                </fileSet>
            </fileSets>
        </module>
        <module id="${rootArtifactId}" dir="__artifactId__.feature" name="${rootArtifactId}">
            <fileSets>
                <fileSet filtered="true" encoding="UTF-8">
                    <directory></directory>
                    <includes>
                        <include>build.properties</include>
                        <include>feature.xml</include>
                        <include>.project</include>
                    </includes>
                </fileSet>
            </fileSets>
        </module>
        <module id="${rootArtifactId}" dir="__artifactId__.p2" name="${rootArtifactId}">
            <fileSets>
                <fileSet filtered="true" encoding="UTF-8">
                    <directory></directory>
                    <includes>
                        <include>category.xml</include>
                    </includes>
                </fileSet>
            </fileSets>
        </module>
        <module id="${rootArtifactId}" dir="__artifactId__.product" name="${rootArtifactId}">
            <fileSets>
                <fileSet filtered="true" encoding="UTF-8">
                    <directory></directory>
                    <includes>
                        <include>category.xml</include>
                        <include>__artifactId__.product</include>
                    </includes>
                </fileSet>
            </fileSets>
        </module>
        <module id="${rootArtifactId}" dir="__artifactId__.targetplatform.oxygen" name="${rootArtifactId}">
            <fileSets>
                <fileSet filtered="true" encoding="UTF-8">
                    <directory></directory>
                    <includes>
                        <include>category.xml</include>
                        <include>__artifactId__.targetplatform.oxygen.target</include>
                        <include>__artifactId__.targetplatform.oxygen.tpd</include>
                    </includes>
                </fileSet>
            </fileSets>
        </module>
    </modules>

    <fileSets>
        <fileSet filtered="true" encoding="UTF-8">
            <directory></directory>
            <includes>
                <include>.gitignore</include>
                <include>.gitattributes</include>
                <include>Readme.MD</include>
                <include>pom.xml</include>
            </includes>
        </fileSet>
    </fileSets>
</archetype-descriptor>